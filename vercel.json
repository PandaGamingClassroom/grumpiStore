{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/grumpi-store"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://grumpistoreserver.onrender.com"
    },
    {
      "src": "/(.*)\\.(js|css|png|jpg|jpeg|ico|svg|webmanifest)",
      "dest": "/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
